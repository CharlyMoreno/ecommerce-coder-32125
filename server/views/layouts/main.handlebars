                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/crud/productos"><i class="fa fa-plus" aria-hidden="true"></i> Crud Productos</a>
                </li>
            </ul>
            {{#if user}}
            <ul class="navbar-nav ml-auto">
                <li class="nav-item nav-user">
                    <img src="{{user.fotoPerfil}}" class="rounded-circle" height="35" alt="" loading="lazy" />
                    <p style="margin:0px">{{user.username}}</p>
                    <a href="/auth/logout" style="color:red"><i class="fa fa-times"></i></a>
                </li>
            </ul>
            {{else}}
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn_login" href="/auth/login">Login</a>
                    <a class="btn_register" href="/auth/register">Register</a>
                </li>
            </ul>
            {{/if}}

        </div>
    </div>
</nav>
